@page "/BeratPipa"
@using BelajarWeb.Rumus

<h3>BeratPipa</h3>

<table>
    
    <tr>
        <td> OD </td>
        <td> <input @bind="Od" id="od" type="number" onkeypress="@KeyPress" /> </td>
    </tr>

    <tr>
        <td> Thickness </td>
        <td> <input @bind="Thickness" type="number" onkeypress="@KeyPress" /> </td>
    </tr>

    <tr>
        <td> Length </td>
        <td> <input @bind="Length" type="number" onkeypress="@KeyPress" /> </td>
    </tr>

    <tr>
        <td> Qty </td>
        <td> <input @bind-value="Qty" type="number" @bind-value:event="oninput" @onkeyup="KeyPress2" /> </td>
    </tr>
   
    @*<tr>
        <td> <button @onclick="Beratpipa" > Hitung </button> </td>
    </tr>*@

    <tr>
        <td> Hasil Berat Pipa =  </td>
        <td>  @Beratpipa </td>
        <td>KG </td>
        
    </tr>


    

</table>

@code {

    decimal Od, Thickness, Length, Qty, Beratpipa;


    [Inject] 
    protected IJSRuntime JsRuntime { get; set; } 






    public void KeyPress(Microsoft.AspNetCore.Components.Web.KeyboardEventArgs args) 
    { 
        if (args.Key == "Enter") 
        { 
            JsRuntime.InvokeVoidAsync("onFocus","od"); 
        } 
    } 

    public void KeyPress2(Microsoft.AspNetCore.Components.Web.KeyboardEventArgs args) 
    { 
        if (args.Key == "Enter") 
        {

            var rumus = new Rumus();
            Beratpipa = rumus.HitungberatPipa(Od, Thickness, Length, Qty);


            




        } 
    
    
    
    } 

}
